@model Chef
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Create a new Chef</h1>
    <form asp-action="CreateChef" asp-asp-controller="Home" method="post">
        
        <div class="form-group row">
            <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
            <span asp-validation-for="FirstName" class="alert-danger"></span>
            <div class="col-sm-10">
                <input asp-for="FirstName" />
            </div>    
        </div>

        <div class="form-group row">
            <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
            <span asp-validation-for="LastName" class="alert-danger"></span>
            <div class="col-sm-10">
                <input asp-for="LastName" />
            </div>    
        </div>

        <div class="form-group row">
            <label asp-for="DoB" class="col-sm-2 col-form-label"></label>
            <span asp-validation-for="DoB" class="alert-danger"></span>
            <div class="col-sm-10">
                <input asp-for="DoB" />
            </div>    
        </div>

        <input type="submit" class="btn btn-primary" />
    </form>
    
</body>
</html>